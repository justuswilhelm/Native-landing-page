<div class="detail-box">
	<div class="row">
		<div class="col-xs-12">
			<h3>natives</h3>
		</div>
	</div>

	<div class="row">
    
        <%  if( "undefined" === typeof user.natives || user.natives.length<=0) {
        %>
            <div class="col-xs-12">
                <h6>This user has not created natives yet</h6>
            </div>
        <% } else {
                for(var i=0; i<user.natives.length; i++) {
        %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <div class="wrapper-card">
                            
                    <div class="card radius shadowDepth1">
                        <div class="card__image border-tlr-radius">
                            <% if("undefined" !== typeof user.natives[i].coverImg && user.natives[i].coverImg !== '') { %>
                                <img src="<%= user.natives[i].coverImg %>">
                            <% } else { %>
                                <img src="/img/crypto-cover.jpg">
                            <% } %>
                        </div>

                        <div class="card__content card__padding">
                            <div class="card__share">
                                <div class="card__social">  
                                    <% if("undefined" !== typeof user.natives.facebookUrl) { %>
                                        <a class="share-icon facebook" href="<%= user.natives.facebookUrl %>"><span class="fa fa-facebook"></span></a>
                                    <% } %>
                                    <% if("undefined" !== typeof user.natives.twitterUrl) { %>
                                        <a class="share-icon twitter" href="<%= user.natives.twitterUrl %>"><span class="fa fa-twitter"></span></a>
                                    <% } %>
                                    <% if("undefined" !== typeof user.natives.mediumUrl) { %>
                                        <a class="share-icon medium" href="<%= user.natives.mediumUrl %>"><span class="fa fa-medium"></span></a>
                                    <% } %>
                                </div>

                                <a id="share" class="share-toggle share-icon" href="#"></a>
                            </div>

                            <div class="card__meta">
                                <a href="#"><%= user.natives[i].name %></a>
                                <!--<time>17th March</time>-->
                            </div>

                            <article class="card__article">
                                <h4><a href="#">Web 3.0</a></h4>

                                <p><%= user.natives[i].description %></p>
                            </article>
                        </div>
                        
                    </div>

                </div>
            </div>
        <% }} %>
    </div>
</div>