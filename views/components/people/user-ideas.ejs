<div class="detail-box">
	<div class="row">
		<div class="col-xs-12">
			<h3>Ideas</h3>
		</div>
	</div>
	<div class="row">
		<%  if( "undefined" === typeof user.ideas || user.ideas.length<=0) {
        %>
            <div class="col-xs-12">
                <h6>This user has not created ideas yet</h6>
            </div>
        <% } else {
                for(var i=0; i<user.ideas.length; i++) {
        %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <div class="wrapper-card">
                            
                    <div class="card radius shadowDepth1">
                        <div class="card__image border-tlr-radius">
                            <% if("undefined" !== typeof user.ideas[i].coverImg && user.ideas[i].coverImg !== '') { %>
                                <img src="<%= user.ideas[i].coverImg %>">
                            <% } else { %>
                                <img src="/img/crypto-cover.jpg">
                            <% } %>
                        </div>

                        <div class="card__content card__padding">
                            <div class="card__share">
                                <div class="card__social">  
                                    <% if("undefined" !== typeof user.ideas[i].facebookUrl) { %>
                                        <a class="share-icon facebook" href="<%= user.ideas[i].facebookUrl %>"><span class="fa fa-facebook"></span></a>
                                    <% } %>
                                    <% if("undefined" !== typeof user.ideas[i].twitterUrl) { %>
                                        <a class="share-icon twitter" href="<%= user.ideas[i].twitterUrl %>"><span class="fa fa-twitter"></span></a>
                                    <% } %>
                                    <% if("undefined" !== typeof user.ideas[i].mediumUrl) { %>
                                        <a class="share-icon medium" href="<%= user.ideas[i].mediumUrl %>"><span class="fa fa-medium"></span></a>
                                    <% } %>
                                </div>

                                <a id="share" class="share-toggle share-icon" href="#"></a>
                            </div>

                            <div class="card__meta">
                                <a href="#"><%= user.ideas[i].name %></a>
                                <!--<time>170.000 ETH</time>-->
                            </div>

                            <article class="card__article">
                                <h4><a href="#"><strong>Launch on:</strong> <%= user.ideas[i].launchDate %></a></h4>

                                <p><%= user.ideas[i].description %></p>
                            </article>
                        </div>

                    </div>

                </div>
            </div>
        <% }} %>
	</div>
</div>