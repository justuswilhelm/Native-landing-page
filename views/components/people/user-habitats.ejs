<div class="detail-box">
	<div class="row">
		<div class="col-xs-12">
			<h3>Habitats</h3>
		</div>
	</div>

	<div class="row">
    
        <%  if( "undefined" === typeof user.habitats || user.habitats.length<=0) {
        %>
            <div class="col-xs-12">
                <h6>This user has not created habitats yet</h6>
            </div>
        <% } else {
                for(var i=0; i<user.habitats.length; i++) {
        %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <div class="wrapper-card">
                            
                    <div class="card radius shadowDepth1">
                        <div class="card__image border-tlr-radius">
                            <% if("undefined" !== typeof user.habitats[i].coverImg && user.habitats[i].coverImg !== '') { %>
                                <img src="<%= user.habitats[i].coverImg %>">
                            <% } else { %>
                                <img src="/img/crypto-cover.jpg">
                            <% } %>
                        </div>

                        <div class="card__content card__padding">
                            <div class="card__share">
                                <div class="card__social">  
                                    <% if("undefined" !== typeof user.habitats.facebookUrl) { %>
                                        <a class="share-icon facebook" href="<%= user.habitats.facebookUrl %>"><span class="fa fa-facebook"></span></a>
                                    <% } %>
                                    <% if("undefined" !== typeof user.habitats.twitterUrl) { %>
                                        <a class="share-icon twitter" href="<%= user.habitats.twitterUrl %>"><span class="fa fa-twitter"></span></a>
                                    <% } %>
                                    <% if("undefined" !== typeof user.habitats.mediumUrl) { %>
                                        <a class="share-icon medium" href="<%= user.habitats.mediumUrl %>"><span class="fa fa-medium"></span></a>
                                    <% } %>
                                </div>

                                <a id="share" class="share-toggle share-icon" href="#"></a>
                            </div>

                            <div class="card__meta">
                                <a href="#"><%= user.habitats[i].name %></a>
                                <!--<time>17th March</time>-->
                            </div>

                            <article class="card__article">
                                <h4><a href="#">Web 3.0</a></h4>

                                <p><%= user.habitats[i].description %></p>
                            </article>
                        </div>
                        
                    </div>

                </div>
            </div>
        <% }} %>
    </div>
</div>