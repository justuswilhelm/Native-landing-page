<div class="detail-box">
	<div class="row">
		<div class="col-xs-12 col-sm-4 col-md-6 col-lg-6">
			<h1><%= idea.name %> <% if(idea.approved) { %><i class="verified fa fa-check" title="Verified idea"></i><% } %></i></h1>

			<h6><%= idea.tagline %></h6>
			
			<% if("undefined" !== typeof idea.facebookUrl) { %>
	            <a href="" class="btn btn-height btn-social-icon btn-facebook"><span class="fa fa-facebook"</span></a>
	        <% } %>
	        <% if("undefined" !== typeof idea.twitterUrl) { %>
	            <a href="" class="btn btn-height btn-social-icon btn-twitter"><span class="fa fa-twitter"</span></a>
	        <% } %>
	        <% if("undefined" !== typeof idea.linkedinUrl) { %>
	            <a href="" class="btn btn-height btn-social-icon btn-linkedin"><span class="fa fa-linkedin"</span></a>
	        <% } %>
		</div>
		<div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
			<p><%= idea.description %></p>
		</div>
	</div>
</div>

<div class="detail-box">    
    <div class="row">
        <div class="col-xs-12 col-lg-6">
            <h6><strong>Website:</strong> <a href="<%= idea.websiteUrl %>" target="_blank"><%= idea.websiteUrl %></a></h6>
            <h6><strong>Launch on:</strong> <%= idea.launchDate %></h6>
        </div>
        <div class="col-xs-12 col-lg-6">
            <h6><strong>BTC Goal:</strong> <%= idea.goalBTC %></h6>
            <h6><strong>ETH Goal:</strong> <%= idea.goalETH %></h6>
        </div>
    </div>
</div>