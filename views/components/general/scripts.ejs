  <script type="text/javascript">
  $(document).ready(function(){
    function submitMailchimpForm(e){

      e.preventDefault();
      e.stopPropagation();

      var btn = $(this);
      var input = $(btn.data('target'));
      var mailchimpInput = $("#mce-EMAIL");
      
      // Setting the email address in the hidden field
      mailchimpInput.val(input.val());

      // Submitting mailchimp's form
      document.mailchimpform.submit();

    }
    $("#footer-mailchimp-subscribe-button").click(submitMailchimpForm);
    $("#header-mailchimp-subscribe-button").click(submitMailchimpForm);
  })
</script>
